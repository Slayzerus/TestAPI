@model IEnumerable<AlfavoxAPI.Models.Product>
    

@{
    ViewBag.Title = "GUI";
    
}

<h2>GUI</h2>
<h3>Add product</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="d-inline col-md-1"></div>
        <div class="d-inline">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Product Name", htmlAttributes: new { @class = "control-label" })
                @Html.Editor("ProductName", new { htmlAttributes = new { @class = "form-control", style = "margin-left: 10px; display:inline-block", value="" } })
                @Html.ValidationMessage("ProductName", "", new { @class = "text-danger", style = "display:inline-block" })
                <input type="submit" value="+" class="btn btn-default" style="display:inline-block" />
            </div>
        </div>


    </div>
}

<h3>All products (@Model.Count().ToString())</h3>
<div class="d-inline col-md-1"></div>
<div class="d-inline">
    <table class="table" style="width:50%;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>